<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0
        http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
        name="graphalytics-platforms-archetype"
        xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <requiredProperties>
        <requiredProperty key="platform-name">
            <defaultValue>Reference</defaultValue>
        </requiredProperty>
        <requiredProperty key="platform-acronym">
            <defaultValue>reference</defaultValue>
        </requiredProperty>
        <requiredProperty key="platform-version">
            <defaultValue>0.0-UNKNOWN</defaultValue>
        </requiredProperty>
        <requiredProperty key="developer-name">
            <defaultValue>Unspecified</defaultValue>
        </requiredProperty>
    </requiredProperties>
    <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>

        <fileSet encoding="UTF-8">
            <directory>src/main/c</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>src/main/assembly</directory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/test/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>config-template</directory>
            <includes>
                <include>**/*.properties</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>sh</directory>
            <includes>
                <include>**/*.sh</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>.gitignore</include>
                <include>LICENSE</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
