<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>${top.dir}</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>report-template/**</include>
				<include>run-benchmark.sh</include>
				<include>README.md</include>
				<include>CHANGELOG.md</include>
				<include>LICENSE</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${platform.dir}</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>prepare-benchmark.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${top.dir}/config-template</directory>
			<outputDirectory>config-template</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${platform.dir}/config-template</directory>
			<outputDirectory>config-template</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${platform.dir}/target</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>${platform.artifact}-original.jar</include>
				<include>${platform.artifact}-withGranula.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
